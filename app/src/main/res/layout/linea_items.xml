<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:baselineAligned="false">

    <android.support.v7.widget.CardView
        android:id="@+id/cvItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:foreground="?selectableItemBackground"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="10sp"
        card_view:cardPreventCornerOverlap="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgLineaItem"
                android:layout_width="match_parent"
                android:layout_height="120sp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="fitCenter"
                android:src="@drawable/campingaz" />

            <TextView
                android:id="@+id/txtLineaItemTipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/imgLineaItem"
                android:paddingEnd="0dp"
                android:paddingStart="10dp"
                android:text="BOMBONA GAS"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtLineaItemMarca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtLineaItemTipo"
                android:paddingEnd="0dp"
                android:paddingStart="10dp"
                android:text="Campingaz"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/txtLineaItemMarca"
                android:layout_toEndOf="@+id/txtLineaItemMarca"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:text="-"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/txtLineaItemModelo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView4"
                android:layout_toEndOf="@+id/textView4"
                android:text="R907"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/txtLineaItemCantidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/txtLineaItemModelo"
                android:layout_alignParentEnd="true"
                android:paddingEnd="10sp"
                android:paddingStart="5sp"
                android:text="Small Text"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/txtLineaItemCantidad"
                android:layout_toStartOf="@+id/txtLineaItemCantidad"
                android:text="Cantidad:"
                android:textAppearance="?android:attr/textAppearanceSmall" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>