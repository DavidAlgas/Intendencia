<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/lblCuentaActualCorreo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/lblCuentaActualAlias"
        android:layout_below="@+id/lblCuentaActualAlias"
        android:text="New Text"
        android:textColor="#000000"
        android:textSize="17sp" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView2"
        android:background="@android:color/darker_gray" />

    <Button
        android:id="@+id/btnAjustes"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/view1"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/view1"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:drawablePadding="16dp"
        android:drawableStart="@drawable/icono_llave"
        android:foreground="?selectableItemBackground"
        android:text="@string/lblCuenta"
        android:textAlignment="textStart" />

    <View
        android:id="@+id/horizontal01"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnAjustes"
        android:background="@android:color/darker_gray" />


    <Button
        android:id="@+id/btnAyuda"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/horizontal01"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/horizontal01"
        android:drawablePadding="16dp"
        android:drawableStart="@drawable/icono_interro"
        android:foreground="?selectableItemBackground"
        android:text="@string/lblAyuda"
        android:textAlignment="textStart" />

    <View
        android:id="@+id/horizontal02"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignBottom="@+id/btnAyuda"
        android:layout_alignParentStart="true"
        android:background="@android:color/darker_gray" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/lblCuentaActualAlias"
        android:layout_marginBottom="20sp"
        android:layout_marginEnd="20sp"
        android:src="@drawable/user" />

    <TextView
        android:id="@+id/lblCuentaActualAlias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView2"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>