<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/imgInfoTienda"
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5sp"
        android:contentDescription="@string/imageAttribute"
        android:scaleType="fitCenter"
        android:src="@drawable/canadiense" />

    <View
        android:id="@+id/horizontal01"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/imgInfoTienda"
        android:background="@android:color/darker_gray" />

    <View
        android:id="@+id/horizontal02"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lblInfoTiendaNombre"
        android:background="@android:color/darker_gray" />

    <View
        android:id="@+id/horizontal03"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lblInfoTiendaModelo"
        android:background="@android:color/darker_gray" />

    <View
        android:id="@+id/horizontal04"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignEnd="@+id/txtInfoTiendaTipo"
        android:layout_below="@+id/lblInfoTiendaTipo"
        android:background="@android:color/darker_gray" />

    <View
        android:id="@+id/horizontal05"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/lblInfoTiendaNpiquetas"
        android:layout_alignParentStart="true"
        android:background="@android:color/darker_gray" />

    <View
        android:id="@+id/horizontal06"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lblInfoTiendaNpiquetas"
        android:background="@android:color/darker_gray" />

    <View
        android:id="@+id/horizontal07"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lblInfoTiendaRevision"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/lblInfoTiendaNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/horizontal01"
        android:layout_marginBottom="5sp"
        android:layout_marginTop="5sp"
        android:layout_toStartOf="@+id/txtInfoTiendaModelo"
        android:text="Nombre"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/lblInfoTiendaModelo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lblInfoTiendaNombre"
        android:layout_marginBottom="5sp"
        android:layout_marginTop="5sp"
        android:layout_toStartOf="@+id/txtInfoTiendaTipo"
        android:text="Modelo"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/lblInfoTiendaTipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lblInfoTiendaModelo"
        android:layout_marginBottom="5sp"
        android:layout_marginTop="5sp"
        android:layout_toStartOf="@+id/txtInfoTiendaCapacidad"
        android:text="Tipo"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/lblInfoTiendaNpiquetas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/lblInfoTiendaEstado"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lblInfoTiendaCapacidad"
        android:layout_marginBottom="5sp"
        android:layout_marginTop="5sp"
        android:text="Nº Piquetas: "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/lblInfoTiendaCapacidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/lblInfoTiendaNpiquetas"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lblInfoTiendaTipo"
        android:layout_marginBottom="5sp"
        android:layout_marginTop="5sp"
        android:text="Capacidad: "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/txtInfoTiendaNombre"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/horizontal01"
        android:layout_marginBottom="5sp"
        android:layout_marginTop="5sp"
        android:layout_toEndOf="@+id/lblInfoTiendaNombre"
        android:textAlignment="viewEnd"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/txtInfoTiendaModelo"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/txtInfoTiendaNombre"
        android:layout_marginBottom="5sp"
        android:layout_marginTop="5sp"
        android:layout_toEndOf="@+id/lblInfoTiendaModelo"
        android:textAlignment="viewEnd"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/txtInfoTiendaTipo"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/txtInfoTiendaModelo"
        android:layout_marginBottom="5sp"
        android:layout_marginTop="5sp"
        android:layout_toEndOf="@+id/lblInfoTiendaTipo"
        android:textAlignment="viewEnd"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/txtInfoTiendaCapacidad"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/txtInfoTiendaTipo"
        android:layout_marginBottom="5sp"
        android:layout_marginTop="5sp"
        android:layout_toEndOf="@+id/lblInfoTiendaCapacidad"
        android:textAlignment="viewEnd"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/txtInfoTiendaNpiquetas"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lblInfoTiendaNpiquetas"
        android:layout_alignBottom="@+id/lblInfoTiendaNpiquetas"
        android:layout_alignEnd="@+id/txtInfoTiendaCapacidad"
        android:layout_marginBottom="5sp"
        android:layout_marginTop="5sp"
        android:layout_toEndOf="@+id/lblInfoTiendaNpiquetas"
        android:textAlignment="viewEnd"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/lblInfoTiendaRevision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/lblInfoTiendaEstado"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/horizontal06"
        android:layout_marginBottom="5sp"
        android:layout_marginTop="5sp"
        android:layout_toStartOf="@+id/txtInfoTiendaRevision"
        android:text="Ultima Revisión"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/txtInfoTiendaRevision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/horizontal06"
        android:layout_marginBottom="5sp"
        android:layout_marginTop="5sp"
        android:layout_toEndOf="@+id/lblInfoTiendaNpiquetas"
        android:textAlignment="viewEnd"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/txtInfoTiendaEstado"
        android:layout_width="170sp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/horizontal07"
        android:layout_marginBottom="5sp"
        android:layout_marginTop="5sp"
        android:layout_toEndOf="@+id/lblInfoTiendaEstado"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textAlignment="viewEnd"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/lblInfoTiendaEstado"
        android:layout_width="130sp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/horizontal07"
        android:layout_marginBottom="5sp"
        android:layout_marginTop="5sp"
        android:text="Estado"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />

</RelativeLayout>